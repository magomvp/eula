{% extends '::base.html.twig' %}

{% block body -%}
    <h1>NewsletterCampaign</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ entity.subject }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Fromuser</th>
                <td>{{ entity.fromUser }}</td>
            </tr>
            <tr>
                <th>Touser</th>
                <td>{{ entity.toUser }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ entity.content }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('newslettercampaign') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('newslettercampaign_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
